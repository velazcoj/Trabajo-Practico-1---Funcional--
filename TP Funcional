-- sum (estadistica esViajeFuturo (\(Futuro _ _ _ aniosLuz) -> aniosLuz) [viajePasado, viajeFuturo, viajeAChina, viajePrueba])

esViajeFuturo (Pasado _ _ _ _) = False
esViajeFuturo (Futuro _ _ _ _) = True

